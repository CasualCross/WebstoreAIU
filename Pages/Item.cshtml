@page "/Item/{id:int}"
@model WebstoreAIU.Pages.ItemModel
@using WebstoreAIU.Services
@using System.Text.Json
@{
    ViewData["Title"] = Model.Item?.Name ?? "Item";
    var additionalImages = Model.Item != null ? ImageService.ParseAdditionalImages(Model.Item.AdditionalImagesJson) : new List<WebstoreAIU.Models.ItemImage>();
}

@if (Model.Item != null)
{
    <div class="container-fluid px-4 py-5">
        <div class="row g-4">
            <!-- Images Section -->
            <div class="col-lg-6">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body p-0">
                        @if (Model.Item.MainImage != null && Model.Item.MainImage.Length > 0)
                        {
                            <img src="@ImageHelper.GetImageSrc(Model.Item.MainImage)" 
                                 alt="@Model.Item.Name" 
                                 class="img-fluid w-100" 
                                 style="max-height: 500px; object-fit: cover; border-radius: 8px 8px 0 0;" 
                                 id="mainImage" />
                        }
                        else
                        {
                            <div class="d-flex align-items-center justify-content-center bg-light" style="height: 500px; border-radius: 8px 8px 0 0;">
                                <div class="text-center text-muted">
                                    <i class="bi bi-image" style="font-size: 4rem;"></i>
                                    <p class="mt-3">No Image Available</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                
                @if (additionalImages.Any())
                {
                    <div class="row g-2">
                        <h5 class="mb-3">Additional Images</h5>
                        @foreach (var img in additionalImages)
                        {
                            <div class="col-4 col-md-3">
                                <img src="data:@img.ContentType;base64,@img.Base64Data" 
                                     alt="Additional image" 
                                     class="img-fluid rounded shadow-sm" 
                                     style="cursor: pointer; height: 100px; object-fit: cover; width: 100%;"
                                     onclick="document.getElementById('mainImage').src = this.src;" />
                            </div>
                        }
                    </div>
                }
            </div>
            
            <!-- Product Info Section -->
            <div class="col-lg-6">
                <div class="sticky-top" style="top: 20px;">
                    <h1 class="display-5 fw-bold mb-3">@Model.Item.Name</h1>
                    <div class="mb-4">
                        <span class="text-primary fw-bold" style="font-size: 2.5rem;">$@Model.Item.Price.ToString("F2")</span>
                    </div>
                    
                    <hr class="my-4" />
                    
                    <div class="mb-4">
                        <h4 class="fw-bold mb-3">Description</h4>
                        <p class="lead text-muted">@Model.Item.Description</p>
                    </div>
                    
                    <div class="card shadow-sm border-0 mb-4">
                        <div class="card-body">
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                @if (!Model.IsOwner)
                                {
                                    <form method="post" asp-page-handler="AddToCart">
                                        <input type="hidden" name="itemId" value="@Model.Item.Id" />
                                        <button type="submit" class="btn btn-success btn-lg w-100 mb-3">
                                            <i class="bi bi-cart-plus"></i> Add to Cart
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <div class="alert alert-info mb-3">
                                        <i class="bi bi-info-circle"></i> This is your item. You can edit or delete it below.
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="alert alert-info mb-3">
                                    <i class="bi bi-info-circle"></i> Please <a asp-page="/Login" class="alert-link">login</a> to add items to cart.
                                </div>
                            }
                            
                            @if (Model.IsOwner)
                            {
                                <div class="d-grid gap-2 mb-3">
                                    <a href="/EditItem/@Model.Item.Id" class="btn btn-primary btn-lg">
                                        <i class="bi bi-pencil-square"></i> Edit Item
                                    </a>
                                    <form method="post" asp-page="/DeleteItem" onsubmit="return confirm('Are you sure you want to delete this item? This action cannot be undone.');">
                                        <input type="hidden" name="id" value="@Model.Item.Id" />
                                        <button type="submit" class="btn btn-danger btn-lg w-100">
                                            <i class="bi bi-trash"></i> Delete Item
                                        </button>
                                    </form>
                                </div>
                            }
                            
                            <a href="/Index" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-arrow-left"></i> Back to Catalog
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container text-center py-5">
        <div class="card shadow-sm border-0">
            <div class="card-body py-5">
                <i class="bi bi-exclamation-triangle text-warning" style="font-size: 4rem;"></i>
                <h1 class="mt-4">Item not found</h1>
                <p class="text-muted mb-4">The item you're looking for doesn't exist or has been removed.</p>
                <a href="/Index" class="btn btn-primary btn-lg">
                    <i class="bi bi-arrow-left"></i> Back to Catalog
                </a>
            </div>
        </div>
    </div>
}

