@page
@model WebstoreAIU.Pages.AddItemModel
@{
    ViewData["Title"] = "Add New Item";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-plus-circle text-primary" style="font-size: 3rem;"></i>
                        <h2 class="mt-3 fw-bold">Add New Item</h2>
                        <p class="text-muted">Create a new product listing</p>
                    </div>
                    
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Input.Name" class="form-label fw-semibold">
                                <i class="bi bi-tag"></i> Item Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Input.Name" class="form-control form-control-lg" placeholder="Enter item name" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Input.Price" class="form-label fw-semibold">
                                <i class="bi bi-currency-dollar"></i> Price <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Input.Price" type="number" step="0.01" class="form-control form-control-lg" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Input.Price" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Input.Description" class="form-label fw-semibold">
                                <i class="bi bi-card-text"></i> Description <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="Input.Description" class="form-control" rows="5" placeholder="Enter item description"></textarea>
                            <span asp-validation-for="Input.Description" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="Input.MainImage" class="form-label fw-semibold">
                                <i class="bi bi-image"></i> Main Image <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Input.MainImage" type="file" accept="image/*" class="form-control form-control-lg" />
                            <small class="form-text text-muted">This image will be displayed in the catalog</small>
                            <span asp-validation-for="Input.MainImage" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="Input.AdditionalImages" class="form-label fw-semibold">
                                <i class="bi bi-images"></i> Additional Images
                            </label>
                            <input asp-for="Input.AdditionalImages" type="file" accept="image/*" multiple class="form-control form-control-lg" />
                            <small class="form-text text-muted">You can select multiple images (optional)</small>
                            <span asp-validation-for="Input.AdditionalImages" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Add Item
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

